{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2015"]
  },
  "include": [
    "lib/**/*",
    "test/**/*"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "documentation",
    "test"
  ]
}
