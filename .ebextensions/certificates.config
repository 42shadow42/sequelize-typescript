files:
  "/certificates/private.crt":
    mode: "000777"
    owner: ec2-user
    group: ec2-user
    source: https://s3.eu-central-1.amazonaws.com/intercharge-backend/certificates/private.crt

  "/certificates/private.key":
    mode: "000777"
    owner: ec2-user
    group: ec2-user
    source: https://s3.eu-central-1.amazonaws.com/intercharge-backend/certificates/private.key

Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Access:
          type: S3
          roleName: aws-elasticbeanstalk-ec2-role
          buckets: intercharge-backend

container_commands:
  01_mv_to_app_dir:
    command: "mv /certificates /var/app/current"
